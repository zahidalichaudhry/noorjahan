<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itpvt.noorjahan.Activities.Product_Details">
    <include layout="@layout/action_bar">    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/p_image"
                android:layout_marginTop="10dp"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/p_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/grey_round"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:hint="Product Name"
            android:layout_margin="2dp"

            android:padding="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="24sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/pink_round"
            android:layout_weight="1"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:hint="Description"
            android:text="Description"
            android:padding="15dp"
            android:layout_margin="2dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <TextView
            android:id="@+id/p_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_round"
            android:fontFamily="@font/gotham_book"
            android:gravity="center"
            android:hint="Product Name"
            android:padding="15dp"
            android:layout_margin="2dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:text="Price"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:text="Original PKR:"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gotham_book"
                    android:hint="Price"
                    android:gravity="center"
                  android:background="@drawable/grey_round"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_book"
                    android:text="Discounted"
                    android:textColor="@color/white"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/tv_disprice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/gotham_book"
                    android:hint="N/A"
                    android:gravity="center"
                    android:background="@drawable/pink_round"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


            <LinearLayout
                android:id="@+id/spinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center_vertical"
                        android:text="Size"
                        android:textSize="22sp"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinner_size"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:textAlignment="center">

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center_vertical"
                        android:text="Color"
                        android:textSize="22sp"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinner_color"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textColor="#0000FF">

                    </Spinner>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_qnty"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/pink_round"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ed_qty"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/grey_round"
                    android:layout_weight="1"
                    android:textColor="@color/black"

                    android:textColorHint="@color/black"
                    android:fontFamily="@font/gotham_book"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="number"
                    android:padding="5dp"
                    android:text="1" />
            </LinearLayout>

            <Button
                android:id="@+id/buy"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/pink_round"
                android:fontFamily="@font/gotham_book"
                android:text="Add To Cart"
                android:textColor="@color/white" />
            <!--<Button-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_width="200dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:id="@+id/sizechart"-->
            <!--android:layout_marginBottom="20dp"-->
            <!--android:background="@color/Mohagni_back"-->
            <!--android:textColor="@color/white"-->
            <!--android:text="Size Chart"/>-->
            <include
                layout="@layout/footer2"></include>
        </LinearLayout>

    </ScrollView>


</LinearLayout>
